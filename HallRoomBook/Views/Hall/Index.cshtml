@model IEnumerable<HallRoomBook.Models.MeetingHall>

@{
    ViewData["Title"] = "Index";
}
<p>
    <a asp-action="Create"><button class="btn btn-primary">Add New Hall</button></a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Meeeting Halls</h3>

    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th> @Html.DisplayNameFor(model => model.HallName)</th>
                    <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.HallName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.RowId"><button class="btn btn-primary">Edit</button></a> |
                            <a asp-action="Details" asp-route-id="@item.RowId"><button class="btn btn-info">Details</button></a> |
                            <a asp-action="Delete" asp-route-id="@item.RowId"><button class="btn btn-danger">Delete</button></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
 </div>

